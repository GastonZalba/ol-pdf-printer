{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "baseUrl": "./",
    "outDir": "./tmp-dist",
    "target": "ESNext",
    "lib": [
      "esnext",
      "dom"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "myPragma",
    "jsxFragmentFactory": "null",
    "declarationMap": true,
    "incremental": true
  },
  "include": [
    "./src"
  ]
}